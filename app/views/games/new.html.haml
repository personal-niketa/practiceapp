.container
  .panel.panel-primary.margin-top-60
    .panel-heading
      %i.fa.fa-gamepad
      Add New Game
    .panel-body
      = form_for @game, url: games_path, method: :post do |f|
        .row
          .form-group.col-lg-6
            %label
              Game Name
              %span{style: 'color: red'} *
            = f.text_field :name, class: "form-control",required: true
        .row
          .col-lg-12
            = f.submit "Add New Game", class: "btn btn-primary"

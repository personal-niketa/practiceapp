.container
  .jumbotron
    .row
      .col-sm-4
        .panel.user-styling
          .panel-heading
            %h1
              %i.fa.fa-users   
          .panel-body
            Users count
            .badge
              = @total_user            
      .col-sm-4
        .panel.user-styling
          .panel-heading
            %h1
              %i.fa.fa-male   
          .panel-body
            Users male count
            .badge
              = @user_male 
      .col-sm-4
        .panel.user-styling
          .panel-heading
            %h1
              %i.fa.fa-female   
          .panel-body
            Users female count
            .badge
              = @user_female
  .jumbotron     
    %h3.page-heading
      User listing
      = link_to new_user_path, class: "btn btn-primary", style: "margin-bottom: 10px; float:right;"  do
        %i.fa.fa-plus
        Add User
    .table-responsive
      %table.table.table-striped.table-bordered
        %thead.thead-light
          %tr.table-head
            %th First Name
            %th Last Name
            %th Gender
            %th Email
            %th Date Of Birth
            %th Action
            %th Age
        %tbody.tbody-bg
          - @users.each do |user|
            %tr
              %td= user.first_name.capitalize
              %td 
                = user.last_name.capitalize
              %td
                = user.gender  
              %td
                = user.email  
              %td= user.dob 

              %td 
                = link_to edit_user_path(id: user.id), class: "btn btn-primary" do
                  %i.fa.fa-user
                  Edit User
                = link_to user_path(id: user.id), data:{confirm: "Are you sure,you want to delete this user?"}, method: :delete, class: "btn btn-primary" do
                  %i.fa.fa-user 
                  Delete   
              %td 
                = age(user.dob)   